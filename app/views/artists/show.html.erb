<%= render "header", artist: %>

<hr class="my-4">

<div class="flex items-baseline">
  <h2 class="mt-4 flex-grow text-header-2">Popular</h2>
  <%= link_to "See all", artist_tracks_path(artist), class: "text-small" %>
</div>
<ul class="tracks mt-2">
  <%= render tracks, enqueueble: true %>
  <li class="track">
    <span class="track--number"></span>
    <a href="#" class="text-secondary hover:text-primary transition-colors">Load more</a>
  </li>
</ul>

<hr class="my-4"/>

<%= render partial: "discography", locals: {artist:, albums:} %>
